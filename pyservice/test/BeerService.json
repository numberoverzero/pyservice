{
  "name": "BeerInventoryService",
  "operations": [
    {
      "name": "add_beer",
      "input": ["name", "quantity", "price", "description"]
    },

    {
      "name": "get_beer",
      "input": ["name"],
      "output": ["quantity", "price", "description"],
      "exceptions": ["BeerDoesNotExist"]
    },

    {
      "name": "list_beers",
      "input": ["continuation_token"],
      "output": [
        "beers",
        "total",
        "continuation_token"
      ],
      "exceptions": ["InvalidContinuationToken"]
    }
  ],
  "exceptions": [
    {
      "name": "BeerDoesNotExist",
      "type": "ClientException"
    },
    {
      "name": "InvalidContinuationToken",
      "type": "ClientException"
    },
    {
      "name": "RetryableException",
      "type": "ServerException"
    }
  ]
}
